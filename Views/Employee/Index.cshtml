@model dynamic

@{
    ViewData["Title"] = "Index - Employee";
    List<CategoryModel> categories = Model.Categories;
    List<UserModel> users = Model.Users;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Job Title
            </th>
            <th>
                Job Description
            </th>
            <th>
                Job Company
            </th>
            <th>
                Job Salary
            </th>
            <th>
               Job Major Skill
            </th>
            <th>
                Category
            </th>
            <th>
                Added By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (JobModel item in (List<JobModel>)Model.Jobs)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobMajorSkill)
            </td>
            <td>
                  @categories.Where(cat => item.Category==cat.Id).FirstOrDefault().CategoryName
            </td>
            <td>
                    @users.Where(user => item.User==user.Id).FirstOrDefault().UserName
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
